import sqlite3
import tkinter as tk

#Criei meu banco

con = sqlite3.connect('banco_exercício.db')

# Criei o cursor que permite que eu manipule sql no arquivo python

c = con.cursor()

# CRIEI A TABELA

c.execute('''
CREATE TABLE IF NOT EXISTS pessoas(
    nome TEXT,
    idade INTEGER,
    email INTEGER,
    endereço INTEGER,
    trabalho TEXT,
    graduação TEXT
    )
''')

con.commit()
con.close()
